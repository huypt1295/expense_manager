// rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isSelf(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function membershipPath(userId, workspaceId) {
      return /databases/$(database)/documents/users/$(userId)/workspaces/$(workspaceId);
    }

    function hasMembership(workspaceId) {
      return signedIn() && exists(membershipPath(request.auth.uid, workspaceId));
    }

    function membershipRole(workspaceId) {
      return hasMembership(workspaceId)
        ? get(membershipPath(request.auth.uid, workspaceId)).data.role
        : null;
    }

    function canManageHousehold(workspaceId) {
      return hasMembership(workspaceId) &&
        membershipRole(workspaceId) in ['owner', 'editor'];
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }

    match /users/{userId} {
      allow read, write: if isSelf(userId);

      match /categories/{categoryId} {
        allow read, write: if isSelf(userId);
      }

      match /budgets/{budgetId} {
        allow read, write: if isSelf(userId);
      }

      match /transactions/{transactionId} {
        allow read, write: if isSelf(userId);
      }

      match /workspaces/{workspaceId} {
        allow read, write: if isSelf(userId);
      }
    }

    match /households/{householdId} {
      allow read: if hasMembership(householdId);
      allow create: if signedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if canManageHousehold(householdId);

      match /members/{memberId} {
        allow read: if hasMembership(householdId);
        allow create, update, delete: if canManageHousehold(householdId);
      }

      match /invitations/{invitationId} {
        allow read: if canManageHousehold(householdId);
        allow create, update, delete: if canManageHousehold(householdId);
      }

      match /transactions/{transactionId} {
        allow read: if hasMembership(householdId);
        allow create, update, delete: if canManageHousehold(householdId);
      }
    }
  }
}
